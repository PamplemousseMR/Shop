{% extends "subTemplate/commun.twig" %} 

{% block head %}
  <link rel="stylesheet" href="css/create.css">
{% endblock %}

{% block title %}
  Create
{% endblock %} 

{% block content %}
    <div class="w-custom mx-auto my-5">
      <div class="mb-3">
        <h1 class="display-4 my-auto text-center">Create item</h1>
      </div>
      <form action="/create" class="mx-5" method="get">
        <div class="mx-5">
        <div class="form-group">
            <label for="name">image url</label>
            <input type="text" class="form-control" name="url" placeholder="url">
        </div>
        <div class="form-group">
            <label for="name">name</label>
            <input type="text" class="form-control" name="name" placeholder="name">
        </div>
        <div class="form-group">
            <label for="quote">quote</label>
            <input type="text" class="form-control" name="quote" placeholder="quote">
        </div>
        <div class="form-group">
            <label for="description">description</label>
            <textarea type="text" class="form-control" name="description">Description</textarea>
        </div>
        <div class="form-group">
            <label for="price">price</label>
            <input type="text" class="form-control" name="price" placeholder="0">
        </div>          
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary">Create item</button>
        </div>
      </form>
    </div>
{% endblock %} 
