{% extends "subTemplate/commun.twig" %} 

{% block head %}
  <link rel="stylesheet" href="css/home.css">
{% endblock %}

{% block title %}
  Home
{% endblock %} 

{% block content %}
<div id="carousel" class="carousel slide mt-5" data-ride="carousel">
  <div class="carousel-inner">
  {% for i in 0..(items|length-1)/3 %}
    <div class="carousel-item {% if loop.first %}active{% endif %}">
      <div class="container">
        <div class="row">
          {% for j in 0..2 %}
            <div class="col-4 d-flex justify-content-center">
              <div class="card m-1">
                <img class="card-img-top mx-auto my-5 d-block" src="{{items[i*3+j].getIcon}}" alt="{{items[i*3+j].getName}}">
                <div class="card-body">
                  <h5 class="card-title text-center">{{items[i*3+j].getName}}</h5>
{# >lg && <xl #}  <p class="card-text text-justify d-none d-lg-block d-xl-none">{{items[i*3+j].getDescription|length > 70 ? items[i*3+j].getDescription|slice(0, 70) ~ '...' : items[i*3+j].getDescription}}</p>
{# >xl #}         <p class="card-text text-justify d-none d-xl-block">{{items[i*3+j].getDescription|length > 125 ? items[i*3+j].getDescription|slice(0, 125) ~ '...' : items[i*3+j].getDescription}}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev" >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
{% if message is defined %}
  <script type="text/javascript">
    $(window).on('load',function(){
      $('#modalMessage').modal('show');
    });
  </script>
{% endif %}
<div class="modal fade" id="modalMessage" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mx-auto text-warning">{{message}}</h5>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
{% endblock %} 
