{% extends "subTemplate/commun.twig" %} 

{% block head %}
  <link rel="stylesheet" href="css/home.css">
{% endblock %}

{% block title %}
  Home
{% endblock %} 

{% block content %}
<div id="carousel" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
  {% for i in range(0, items|length-1, 3) %}
    <div class="carousel-item {% if loop.first %}active{% endif %}">
      <div class="container">
        <div class="row">
          <div class="col-4 d-flex justify-content-center">
            {% include 'subTemplate/item.twig' with {'item':items[i]} %}
          </div>
          {% if i+1 < items|length %}
            <div class="col-4 d-flex justify-content-center">
              {% include 'subTemplate/item.twig' with {'item':items[i+1]} %}
            </div>
          {% endif %}
          {% if i+2 < items|length %}
            <div class="col-4 d-flex justify-content-center">
              {% include 'subTemplate/item.twig' with {'item':items[i+2]} %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev" >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
{% endblock %} 
