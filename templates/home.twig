{% extends "commun.twig" %} 

{% block title %}
  Home
{% endblock %} 

{% block content %}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    
    <div class="carousel-item active">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{items[0].getIcon}}" alt="{{items[0].getName}}" style="transform: scale(0.2);">
        <div class="card-body">
          <h5 class="card-title">{{items[0].getName}}</h5>
          <p class="card-text">{{items[0].getDescription}}</p>
        </div>
      </div>
    </div>
    
    {% for item in items %}
       <div class="carousel-item">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="{{item.getIcon}}" alt="{{item.getName}}" style="transform: scale(0.2);">
          <div class="card-body">
            <h5 class="card-title">{{item.getName}}</h5>
            <p class="card-text">{{item.getDescription}}</p>
          </div>
        </div>
      </div>
    {% endfor %}
    
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
{% endblock %} 
